{
  "manifest_version": 3,
  "name": "Security Hub",
  "version": "1.0.0",
  "description": "Browse safely: phishing detection, ad blocking, download scanning, and suspicious behavior warnings.",
  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Security Hub",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {},
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads",
        "enabled": true,
        "path": "rules/rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blacklist.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
